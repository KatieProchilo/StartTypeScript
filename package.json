{
    "name": "starttypescript",
    "version": "1.0.0",
    "description": "Set up a TS environment",
    "license": "MIT",
    "main": "./lib/index.js",
    "scripts": {
        "build": "node_modules/.bin/tsc --build",
        "start": "node_modules/.bin/tsc --build && node ./lib/index.js",
        "watch": "concurrently \"tsc -w\" \"nodemon dist/server.js\"",
        "lint": "node_modules/.bin/tslint -c tslint.json 'src/**/*.ts'",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "dependencies": {
        "concurrently": "^4.1.0",
        "typescript": "^3.2.1"
    },
    "devDependencies": {
        "nodemon": "^1.18.4",
        "@types/node": "10.10.2"
    }
}
